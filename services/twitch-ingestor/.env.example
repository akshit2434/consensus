# Twitch Configuration
# Your Twitch bot account username (the account you registered in the Twitch Developer Console)
TWITCH_USERNAME=my_twitch_bot

# Your Twitch OAuth token from the Twitch Developer Console
# 1. Go to https://dev.twitch.tv/console
# 2. Register your application
# 3. Generate an OAuth token with 'chat:read' scope
# Must include the 'oauth:' prefix
TWITCH_OAUTH_TOKEN=oauth:abcdefghijklmnopqrstuvwxyz123456

# Comma-separated list of Twitch channels to join
# Do not include the '#' prefix
TWITCH_CHANNELS=channel1,channel2,channel3

# RabbitMQ Configuration
# Hostname or IP address of RabbitMQ server
RABBITMQ_HOST=localhost

# RabbitMQ AMQP port
RABBITMQ_PORT=5672

# RabbitMQ username (default: guest)
RABBITMQ_USERNAME=guest

# RabbitMQ password (default: guest)
RABBITMQ_PASSWORD=guest

# RabbitMQ virtual host (default: /)
RABBITMQ_VHOST=/

# Service Configuration
# Log level: error, warn, info, or debug
LOG_LEVEL=info

# Delay between reconnection attempts in milliseconds
RECONNECT_DELAY_MS=5000

# Maximum number of reconnection attempts before giving up
MAX_RECONNECT_ATTEMPTS=10 